@model IEnumerable<CodeFirstVenueBooking.Models.Decoration>
<h2> Decoration List</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>  EventName          </th>
            <th>  Price      </th>   
         </tr>
    </thead>
    <tbody>
        @foreach(var Decoration in Model)
        {
            <tr>
                <td>@Decoration.Id</td>
                <td>@Decoration.EventName</td>
                <td>@Decoration.Price</td>
                <td> <a asp-action="Edit" asp-controller="Decoration" asp-route-id="@Decoration.Id">Edit</a>
                    </td>
                <td>
                    <a asp-action="Delete" asp-controller="Decoration" asp-route-id="@Decoration.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
