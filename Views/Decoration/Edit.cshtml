@model CodeFirstVenueBooking.Models.Decoration


<h2> Edit </h2>

<form asp-action="Edit" asp-controller="Decoration" method="post">
    <div class="form-group">
        <label asp-for="Id" class="form-control col-sn-2">ID</label>
        <input asp-for="Id" class="form-control col-sn-10" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="EventName" class="form-control col-sn-2">Event Name</label>
        <input asp-for="EventName" class="form-control col-sn-10" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="form-control col-sn-2">Enter Price</label>
        <input asp-for="Price" class="form-control col-sn-10" />
    </div>

    <div>
        <button type="submit" class=" btb btn-success">Update</button>
    </div>

</form>
